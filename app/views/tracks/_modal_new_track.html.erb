<div class="modal fade" id="newTrackModal" tabindex="-1" role="dialog" aria-labelledby="newBandModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h6 class="modal-title">Create a new track!</h6>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <%= simple_form_for [@band, @track] do |f| %>
          <%= f.input :title %>
          <%= f.input :artist %>
          <%= f.input :style %>
          <%= f.input :duration, placeholder: "180" %>
          <%= f.input :tempo, placeholder: "120" %>
          <%= f.input :pattern %>
          <%= f.input :photo, as: :file %>

          <div class="text-center mt-4">
            <%= f.button :submit, label: 'Create!', class: "btn btn-blue" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
