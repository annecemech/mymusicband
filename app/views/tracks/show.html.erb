<div id="particles-js"></div>
<div class="banner-small">
  <div class="banner-slanted"></div>
  <%= image_tag "rocks.png", alt: "Rock on hand sign" ,id: "rocks" %>

  <h1><%= @track.title %></h1>
  <%= link_to "Mix Records", track_recordings_path(@track), class: "btn btn-blue" %>
  <%= render "shared/button_back"%>
</div>
<br>

<div class="container pt-3">

  <ul class="nav list-inline tabs-underlined" id="myTab" role="tablist">
    <li>
      <a class="tab-underlined active" id="record-tab" data-toggle="tab" href="#record" role="tab" aria-controls="record" aria-selected="true">Sheets & Recordings</a>
    </li>
    <li>
      <a class="tab-underlined" id="inspire-tab" data-toggle="tab" href="#inspire" role="tab" aria-controls="inspire" aria-selected="false">Inspiration</a>
    </li>
  </ul>


  <div class="tab-content pt-2">
    <div class="tab-pane active" id="record" role="tabpanel" aria-labelledby="record-tab">
      <div class="row">
        <div class="col-xs-12 col-md-6 mb-2">
          <%= render 'partitions/index' %>
        </div>
        <div class="col-xs-12 col-md-6 mb-1">
          <%= render 'recordings/index' %>
        </div>
      </div>
    </div>

    <div class="tab-pane" id="inspire" role="tabpanel" aria-labelledby="inspire-tab">
      <%= render 'inspirations/index' %>
    </div>
  </div>

  <%= render 'comments/index' %>

  <%= render 'shared/modal_add_resource' %>
  <%= render 'shared/modal_add_partition' %>
  <%= render 'shared/modal_add_inspiration' %>
  <% @track.recordings.each do |recording| %>
    <%= render partial:'shared/modal_update_ressource', locals: {track: @track, recording: recording}  %>
  <% end %>
  <% @track.partitions.each do |partition| %>
    <%= render partial:'shared/modal_update_partition', locals: {track: @track, partition: partition}  %>
  <% end %>
  <% @track.inspirations.each do |inspiration| %>
    <%= render partial:'shared/modal_update_inspiration', locals: {track: @track, partition: inspiration}  %>
  <% end %>


</div>
