<div class="partition-show">
  <div class="banner-small banner-transparent text-center">
    <div class="banner-title-band">
      <h1><%= @partition.track.title %></h1>
    </div>
  </div>
  <div class="container container-partition">
    <div class="text-center">
      <%= cl_image_tag @partition.resource.key, width: 800 %>
    </div>
  </div>

  <div class= "card-player fixed-bottom d-flex flex-column">
    <div class="card-record mt-4 d-flex flex-column">
      <a class="mx-5 btn-record "><i class="fas fa-record-vinyl"></i></a>
      <div class="card-player-listen d-flex justify-content-center">
        <a class="btn-sound-record mx-5 btn-backward"><i class="fas fa-backward"></i></a>
        <a class="btn-sound-record mx-5 btn-play-record"><i class="far fa-play-circle"></i></a>
        <a class="btn-sound-record mx-5 btn-play-record"><i class="fas fa-forward"></i></a>
        <a class="btn-sound-record mx-5 btn-save"><i class="fas fa-save"></i></a>
        <a class="btn-sound-record mx-5 btn-save"><i class="fas fa-trash"></i></a>
      </div>
    </div>
    <div>
      <a class="dropdown-recordings" data-toggle="collapse" data-target="#collapseRecordings" aria-expanded="false" aria-controls="collapseExample">
    Select your recordings buddy <i class="fas fa-angle-down"></i>
      </a>
      <div class="collapse" id="collapseRecordings">
        <div class="list-recordings">
          <ul class="list-unstyled">
            <% @recording.each do |record| %>
              <li><input class="audio checkrecording" type="checkbox" data-recordurl="<%= cloudinary_url(record.resource.key, resource_type: :video) %>" name="recording"/><%= record.name %></input></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

