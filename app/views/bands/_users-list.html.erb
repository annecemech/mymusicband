<div>
  <% @band.users.each do |user| %>
    <ul class='list-inline'>
      <li class="list-inline-item"><%= cl_image_tag user.avatar.key, class:"avatar-large" %></li>
      <li class="list-inline-item"><%= user.first_name %></li>
      <li class="list-inline-item">
        <% case user.instrument.name %>
        <% when "Guitar" %>
          <%= image_tag "icon_acoustic_guitar.svg", class: "user-instrument" %>
        <% when "Bass" %>
          <%= image_tag "icon_electric_bass.svg", class: "user-instrument" %>
        <% when "Drums" %>
          <%= image_tag "icon_drums.svg", class: "user-instrument" %>
        <% when "Vocals" %>
          <%= image_tag "icon_microphone.svg", class: "user-instrument" %>
        <% else %>
          <%= image_tag "icon_music.svg", class: "user-instrument" %>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>
