<div class="banner-small text-center">
  <div class="banner-title-band">
    <h1><%= @band.name %></h1>
    <p><%= @band.description %></p>
  </div>
</div>

<div class ="container pb-5">
  <div class="row">

    <div class="col-lg-8 pr-5">
      <ul class="list-inline">
        <li class="list-inline-item"><h2 class="pt-5 pb-2">Tracks Library</h2></li>
        <li class="list-inline-item"><button type="button" class="btn btn-danger rounded-circle">+</button></li>
      </ul>
      <div>
        <%= render "tracks-list", track: @track %>
      </div>
    </div>

    <div class="col-lg-4">
       <ul class="list-inline">
        <li class="list-inline-item"><h2 class="pt-5 pb-2 text-right">Crew</h2></li>
        <li class="list-inline-item"><button type="button" class="btn btn-danger rounded-circle">+</button></li>
      </ul>
      <div>
        <%= render "users-list", user: @user %>
      </div>
    </div>

  </div>
</div>
