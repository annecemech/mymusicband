<div class="banner-small text-center">
  <div class="banner-slanted"></div>
  <%= image_tag "rocks.png", alt: "Rock on hand sign" ,id: "rocks" %>


  <h1><%= @band.name %></h1>
  <p><%= @band.description %></p>
</div>

<div class ="container pb-5">
  <div class="row">

    <div class="col-lg-8 pr-5">
      <ul class="list-inline justify-content-center pb-3">
        <li class="list-inline-item"><h2 class="no-pm-bottom text-shadow-orange">Tracks Library</h2></li>
        <li class="list-inline-item"><button type="button" class="btn btn-plus"><h2><i class="fas fa-plus-circle"></i></h2></button></li>
      </ul>
      <div class="pl-5">
        <%= render "tracks-list", track: @track %>
      </div>
    </div>

    <div class="col-lg-4">
       <ul class="list-inline pt-5 pb-3">
        <li class="list-inline-item"><h2 class="no-pm-bottom text-shadow-orange">Crew</h2></li>
        <li class="list-inline-item"><button type="button" class="btn btn-plus"><h2><i class="fas fa-plus-circle"></i></h2></button></li>
      </ul>
      <div class="pl-5">
        <%= render "users-list", user: @user %>
      </div>
    </div>

  </div>
</div>
