<div class="modal fade" id="newBandModal" tabindex="-1" role="dialog" aria-labelledby="newBandModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h6 class="modal-title">Create a new band!</h6>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <%= simple_form_for [@band] do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :creation_year %>
          <%= f.input :photo, as: :file %>

          <div class="text-center mt-4">
            <%= f.button :submit, label: 'Assemble!', class: "btn btn-blue" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
