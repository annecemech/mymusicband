<div class="container">
  <%= link_to "Back to track", track_path(@track), class: "btn btn-blue" %>
  <div class="align-items-center">
    <h3>All recordings for <%= @track.title %></h3>
    <%= render "shared/button_back"%>
  </div>

  <%= render 'recordings/index-show' %>

  <div class="text-center">
    <div class="btn btn-blue play-recordings">
      Mix Selected Recordings
    </div>
    <div class="btn btn-blue pause-recordings">
      Pause
    </div>
    <div class="btn btn-blue stop-recordings">
      Stop
    </div>
    <div class="btn btn-blue download-mix">
      Download Mix
    </div>
  </div>

</div>
