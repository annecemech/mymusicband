<div class="container border rounded py-3">
  <div class="d-flex justify-content-between">
    <h3>Recordings</h3>
    <%= image_tag "plus.png", class: "btn-add" %>
  </div>

  <% @track.recordings.each do |recording| %>
    <div class="resource-card grow-resource">
      <%= image_tag "play.png" %>
      <%= link_to track_recordings_path(recording) do %>
        <%= recording.name %>
      <% end %>
      <div class="ml-auto">
        <%= link_to "Play", track_recordings_path(recording), class: "btn btn-outline-warning btn-sm" %>
      </div>
    </div>
  <% end %>
</div>
