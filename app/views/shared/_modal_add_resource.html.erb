<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Temp: Add Recording
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Add a new recording</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <%= simple_form_for [@track, @recording] do |f| %>
          <%= f.input :name %>
          <%= f.input :resource, as: :file %>
          <%= f.input :is_lead, label: 'Lead rhythm track', input_html: { class: "toggle" } %>
          <%= f.association :partition, collection: @track.partitions, input_html: { class: 'select2' } %>

          <div class="d-flex justify-content-end mt-4">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.button :submit, class: "btn btn-primary ml-3" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
