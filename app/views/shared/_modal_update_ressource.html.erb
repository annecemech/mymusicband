<div class="modal fade" id="recordingModalUpdate-<%= recording.id %>" tabindex="-1" role="dialog" aria-labelledby="recordingModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h6 class="modal-title">Update your recording</h6>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <%= simple_form_for [track, recording] do |f| %>
          <%= f.input :name %>
          <%= f.input :resource, as: :file %>
          <%= f.input :is_lead, label: 'Lead rhythm track', input_html: { class: "toggle", id: "recording-is-lead-#{recording.id}" } %>
          <%= f.association :partition, collection: track.partitions%>

          <div class="text-center mt-4">
            <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> -->
            <%= f.button :submit, label: 'Update', class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
