<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <% if user_signed_in? %>
    <%= link_to root_path, class: "navbar-brand" do %>
      <h2><span id="logo">(<i class="fas fa-microphone-alt"></i>)</span> My music band</h2>
    <% end %>
  <% else %>
    <%= link_to root_path, class: "navbar-brand" do %>
      <h2><span id="logo">(<i class="fas fa-microphone-alt"></i>)</span> My music band</h2>
    <% end %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li>
        <div class="lang dropdown">
          <div class="dropdown-toggle" id="langDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
            <% case I18n.locale %>
            <% when :fr %>
              <%= image_tag "Flag_of_France.svg", class: "flag" %>
            <% else %>
              <%= image_tag "Flag_of_the_United_Kingdom.svg", class: "flag" %>
            <% end %>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="langDropdown">
            <%= link_to 'FranÃ§ais', root_path(locale: :fr), class: "dropdown-item" %>
            <%= link_to 'English', root_path(locale: :en), class: "dropdown-item" %>
          </div>
        </div>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.avatar.key, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "All my bands", my_bands_path, class: "dropdown-item" %>
            <% current_user.bands.each do |band| %>
            <%= link_to "-#{band.name}", band_path(band), class: "dropdown-item" %>
            <% end %>
            <%= link_to "Create a band", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
        <li>
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
